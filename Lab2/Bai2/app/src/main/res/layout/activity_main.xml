<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- LinearLayout ngang chứa TextView "Nhập tên:" và EditText -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TextView "Nhập tên:" bên trái -->
        <TextView
            android:id="@+id/txtNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập tên:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:background="#7BFFC107"/>

        <!-- EditText để nhập dữ liệu -->
        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:hint="Name?"
            android:layout_marginRight="40dp"
            android:inputType="text" />
    </LinearLayout>

    <!-- Button để thêm dữ liệu vào ArrayList, cách lề trái và phải 20dp -->
    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập"
        android:textColor="@color/black"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@android:color/darker_gray"/>

    <!-- TextView hiển thị vị trí và giá trị phần tử được chọn -->
    <TextView
        android:id="@+id/txtShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#CDDC39"
        android:textSize="18sp"
        android:background="#0F6A60" />

    <!-- ListView hiển thị danh sách các phần tử -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>
